<android.support.design.widget.CoordinatorLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.snapit.genia.snapit.SnapFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="45dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            app:layout_anchor="@color/cardview_dark_background"
            app:layout_anchorGravity="bottom|right|end"
            app:srcCompat="@android:drawable/stat_notify_sync_noanim" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:paddingStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:scaleType="fitXY"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentRight="true"
            app:layout_anchor="@color/cardview_dark_background"
            app:layout_anchorGravity="bottom|right|end"
            app:srcCompat="@android:drawable/ic_menu_send" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"

         />

        <TextView
            android:id="@+id/username_resp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#55233333"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textIsSelectable="true" />

        <LinearLayout
            android:id="@+id/ll_message_photofull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            android:layout_marginBottom="117dp"
            android:background="#88676767">

            <TextView
                android:id="@+id/tv_message_snap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_message_snap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:maxLength="32"
        android:background="@color/darkBlue"
        android:backgroundTint="@color/bg_screen1"
        android:maxLines="1"
        android:paddingStart="5dp"
        android:hint="@string/your_message"
        android:inputType="text"
        android:layout_marginBottom="50dp"
        />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/material_design_android_floating_action_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:paddingBottom="35dp"
            android:visibility="invisible"
            fab:menu_animationDelayPerItem="55"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_buttonSpacing="0dp"
            fab:menu_colorNormal="@android:color/holo_blue_dark"
            fab:menu_colorPressed="#AFAFAA"
            fab:menu_colorRipple="#99d4d4d4"
            fab:menu_fab_label="Menu"
            fab:menu_fab_size="normal"
            fab:menu_icon="@drawable/fab_add"
            fab:menu_labels_colorNormal="#333"
            fab:menu_labels_colorPressed="#444"
            fab:menu_labels_colorRipple="#66efecec"
            fab:menu_labels_cornerRadius="3dp"
            fab:menu_labels_ellipsize="none"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            fab:menu_labels_margin="0dp"
            fab:menu_labels_maxLines="-1"
            fab:menu_labels_padding="8dp"
            fab:menu_labels_position="left"
            fab:menu_labels_showAnimation="@anim/fab_scale_up"
            fab:menu_labels_showShadow="true"
            fab:menu_labels_singleLine="false"
            fab:menu_labels_textColor="#f2f1f1"
            fab:menu_labels_textSize="15sp"
            fab:menu_openDirection="up"
            fab:menu_shadowColor="@android:color/black"
            fab:menu_shadowRadius="3dp"
            fab:menu_shadowXOffset="1dp"
            fab:menu_shadowYOffset="4dp"
            fab:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/floatingmenu_snap_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send_black"
                fab:fab_colorNormal="@color/bg_screen3"
                fab:fab_colorRipple="@color/darkBlue"
                fab:fab_label="Snap Again"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/floatingmenu_snapuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_a_photo_black_24dp"
                fab:fab_colorNormal="@color/bg_screen3"
                fab:fab_colorRipple="@color/darkBlue"
                fab:fab_label="Snap to this User"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/floatingmenu_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_panorama_black_24dp"
                fab:fab_colorNormal="@color/bg_screen3"
                fab:fab_colorRipple="@color/darkBlue"
                fab:fab_label="Album"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/floatingmenu_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_block_black_24dp"
                fab:fab_colorNormal="@color/bg_screen3"
                fab:fab_colorRipple="@color/darkBlue"
                fab:fab_label="Report"
                fab:fab_size="mini" />
        </com.github.clans.fab.FloatingActionMenu>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>